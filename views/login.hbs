<div class="page-wrapper">
  <div class="d-flex">
    <div class="login-form">
      <div class="row login-box">
        <h2>{{formTitle}}</h2>
          <form action="" class="" method="POST">
            <!-- Utente -->
            <div class="form-field-input ">
              <label class="control-label" for="utente">Username</label>
              <div class="form-field">
                <input id="utente" class="form-control" name="j_username" type="text" size="25" maxlength="255" autocomplete="off" tabindex="1" autofocus="">	
              </div>
            </div>
            <div id="userError" class="form-field-error">
              <strong>Wrong username</strong>.<br>
              [Description of the formal rules for correct usernames]
            </div>
            <!-- Password -->
            <div class="form-field-input ">
              <label class="control-label" for="password">Password</label>
              <div class="form-field">
                <input id="password" class="form-control" name="j_password" type="password" size="25" maxlength="50" autocomplete="off" tabindex="2">
              </div>
            </div>
            <div id="pwdError" class="form-field-error">
              <strong>Is the password correct?</strong><br>
              Try again or  <a href="#">reset password</a></a>.
            </div>
            <div class="form-field sub-field">
              <a href="#">
                Reset password
              </a>
            </div>
            <div class="form-field-input text-right">
              <input type="submit" tabindex="3" value="Send" id="btnLogin" class="btn btn-primary shadow-none" alt="Accedi">
            </div>
          </form>
